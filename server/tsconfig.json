{
    "compilerOptions": {
       "target": "ES6",
       "module": "NodeNext",
       "strict": true,
       "resolveJsonModule": true,
       "esModuleInterop": true,
       "skipLibCheck": true,
       "forceConsistentCasingInFileNames": true,
       "outDir": "./dist",
       "experimentalDecorators": true,
       "emitDecoratorMetadata": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
 }